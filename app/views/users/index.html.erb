<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      スマホからのご注文を<br>お待ちしています！
    </h2>
    <p class='service-explain'>
      店員を呼ばずにスマホから
    </p>
    <p class='service-explain'>
      ご注文、お支払いいただけます
    </p>

  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>


  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>お店をご選択ください</h2>
    <ul class='item-lists'>
      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <%# if @users.any? %>
      <% @users.each do |user| %>
      <li class='list'>
        <%= link_to "#" do %>
        <div class='item-img-content'>
          <%= user.shop_name %>
          </div>
          </li>
          <li class='list'>
          <%= user.city %>
          </li>
          <%end %>
         
        </div>
        
        <% end %>
      </li>

    </ul>
  </div>
  <%# /商品一覧 %>
</div>

<%= render "shared/footer" %>